<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" styleClass="rootbackground" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.sigeceuna.controller.ChangePasswordController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label styleClass="label-title" text="Change password" />
            <PasswordField fx:id="txtPassword" focusTraversable="false" promptText="Password" />
            <PasswordField fx:id="txtConfirmPassword" focusTraversable="false" promptText="Confirm Password" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="btnCancelTem" focusTraversable="false" mnemonicParsing="false" onAction="#onActionBtnCancel" text="Calcel">
                     <graphic>
                        <ImageView fx:id="imgCancelTem" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic></Button>
                  <Button fx:id="btnConfirmTem" focusTraversable="false" mnemonicParsing="false" onAction="#onActionBtnConfirm" text="Confirm">
                     <graphic>
                        <ImageView fx:id="imgConfirm" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic></Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="60.0" right="60.0" top="20.0" />
         </padding>
         <styleClass>
            <String fx:value="smoothbackground" />
            <String fx:value="shadoweffect" />
         </styleClass>
      </VBox>
   </children>
</AnchorPane>
